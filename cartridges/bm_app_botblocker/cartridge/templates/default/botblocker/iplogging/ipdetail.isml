<isinclude template="inc/Modules" />
<isdecorate template="page/page.isml">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 px-0">
                <div class="jumbotron jumbotron-fluid py-4 mb-0">
                    <div class="container-fluid">
                        <h2 class="display-6" id="ipaddress"
                            data-informationservice="${URLUtils.url('BBServices-IPInformation', 'ip', pdict.oIPDetail.ip)}"
                        >${pdict.oIPDetail.ip}</h1>
                        <p class="lead">
                            <div class="row" id="ipinformation">
                                <div class="col-2">
                                    <b>IP Address:</b> ${pdict.oIPDetail.ip} <br />
                                    <b>Session page count:</b> <isprint value="${pdict.oIPDetail.count}" style="INTEGER"><br />
                                    <b>Session age:</b> <isprint value="${pdict.oIPDetail.age}" style="INTEGER"> <br />
                                    <b>Status:</b>
                                    <isif condition="${!pdict.oIPDetail.blacklistStatus}">
                                        Not blacklisted
                                    <iselse/>
                                        Blacklisted
                                    </isif>
                                </div>
                                <div class="col-5">
                                    <p>
                                        <b>User Agent:</b> ${pdict.oIPDetail.userAgent.source}
                                    </p>
                                    <isif condition="${pdict.oIPDetail.userAgent.isKnownBot}">
                                        <p>
                                            <b>Bot name:</b> ${pdict.oIPDetail.userAgent.bot.name} <br />
                                            <b>Bot category:</b> ${pdict.oIPDetail.userAgent.bot.category} <br />
                                            <b>Bot url:</b> ${pdict.oIPDetail.userAgent.bot.url}
                                        </p>
                                    </isif>

                                    <isif condition="${pdict.oIPDetail.userAgent.isKnownBrowser}">
                                        <p>
                                            <b>Browser name:</b> ${pdict.oIPDetail.userAgent.browser.name} <br />
                                            <b>Browser version:</b> ${pdict.oIPDetail.userAgent.browser.version} <br />
                                            <b>Browser engine:</b> ${pdict.oIPDetail.userAgent.browser.engine}
                                        </p>
                                    </isif>

                                    <isif condition="${pdict.oIPDetail.userAgent.isKnownLibrary}">
                                        <p>
                                            <b>Library name:</b> ${pdict.oIPDetail.userAgent.library.name} <br />
                                            <b>Library type:</b> ${pdict.oIPDetail.userAgent.library.version} <br />
                                            <b>Library url:</b> ${pdict.oIPDetail.userAgent.library.url}
                                        </p>
                                    </isif>

                                    <isif condition="${pdict.oIPDetail.userAgent.isKnownBrowser || pdict.oIPDetail.userAgent.isKnownLibrary}">
                                        <p>
                                            <b>OS name:</b> ${pdict.oIPDetail.userAgent.os.name} <br />
                                            <b>OS version:</b> ${pdict.oIPDetail.userAgent.os.version}  <br />
                                            <b>OS platform:</b> ${pdict.oIPDetail.userAgent.os.platform}
                                        </p>
                                    </isif>
                                </div>
                            </div>
                        </p>
                        <p>
                            <div class="row">
                                <div class="col-12">
                                    <isif condition="${!pdict.oIPDetail.blacklistStatus || pdict.oIPDetail.blacklistStatus === 0}">
                                        <button type="button" class="btn btn-primary">Blacklist temporarily (30 days)</button>
                                        <button type="button" class="btn btn-primary">Blacklist</button>
                                    <iselse/>
                                        <button type="button" class="btn btn-primary">Whitelist</button>
                                    </isif>
                                </div>
                            </div>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 py-4">
                <h2>Visited pages</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table data-classes="table table-striped"
                    data-pagination="true"
                    data-toggle="table"
                    data-detail-view="true"
                    data-detail-formatter="detailFormatter"
                    data-sort-name="time"
                    data-sort-order="desc"
                >
                    <thead>
                        <tr>
                            <th scope="col" data-width="50" data-width-unit="%" data-formatter="urlFormatter">Page</th>
                            <th scope="col" data-field="time" data-sortable="true">Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        <isloop iterator="${pdict.oIPDetail.pageHistory}" alias="historyItem">
                            <tr>
                                <td>
                                    <isprint value="${historyItem.split('|')[0]}"/>
                                </td>
                                <td >
                                    <isprint value="${new Date(Number(historyItem.split('|')[1]))}" style="DATE_SHORT"/>
                                    <isprint value="${new Date(Number(historyItem.split('|')[1]))}" style="DATE_TIME"/>
                                </td>

                            </tr>
                        </isloop>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script>
        /**
         * Formats the URL view in tables.
         *
         * @param {string} value - The url
         * @param {integer} row - The current row
         *
         * @returns {string} - The formatted URL
         */
        function urlFormatter(value, row) {
            return value.split('?')[0];
        }

        /**
         * Generates a detail view for a row on IP Details
         * @param {integer} index - The row index
         * @param {Object} row - The row
         *
         * @returns {string} - The HTML to show
         */
        function detailFormatter(index, row) {
            var html = [];

            if (row[0].indexOf('?') > 0) {
                html.push('<div class="row">');
                var paramString = row[0].split('?')[1];
                var paramKeyValue = paramString.split('&');

                paramKeyValue.forEach((keyValue) => {
                    var splitKeyValue = keyValue.split('=');

                    html.push('<div class="col-3"><p><b>' + splitKeyValue[0] + ':</b> ' + splitKeyValue[1] + '</p></div>');
                });
                html.push('</div>');
            } else {
                html.push('No parameters');
            }


            return html.join('');
        }
    </script>
    <script src="${URLUtils.staticURL('/js/ipdetail.js')}" defer="defer"></script>
</isdecorate>
